<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>[%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX}] [%thread] %-5level %logger{36} - %msg%n</pattern>
        </layout>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>${catalina.base}/logs/openncp-web-portal.log</file>
        <append>true</append>
        <encoder>
            <pattern>[%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX}] [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE_CLINICAL" class="ch.qos.logback.core.FileAppender">
        <file>${catalina.base}/logs/openncp-web-portal-clinical.log</file>
        <append>true</append>
        <encoder>
            <pattern>[%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX}] [%thread] %-5level %logger{36}.%class{0}.%M\(%line\) - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="LOGGER_CLINICAL" level="DEBUG" additivity="false">
        <appender-ref ref="FILE_CLINICAL"/>
    </logger>

    <!-- Spring Web Service Payload Logging - Uncomment to enable MessageTracing Request/Response-->
    <!--<logger name="org.springframework.ws.client.MessageTracing" level="TRACE" additivity="false">-->
    <!--<appender-ref ref="FILE_CLINICAL"/>-->
    <!--</logger>-->
    <!--<logger name="org.springframework.ws.server.MessageTracing" level="TRACE" additivity="false">-->
    <!--<appender-ref ref="FILE_CLINICAL"/>-->
    <!--</logger>-->
    <!-- End Spring Web Service Logging-->
    <logger name="org.apache.axis2" level="DEBUG" additivity="false">
        <appender-ref ref="FILE"/>
    </logger>

    <logger name="eu" level="INFO" additivity="false">
        <appender-ref ref="FILE"/>
    </logger>

    <logger name="epsos" level="INFO" additivity="false">
        <appender-ref ref="FILE"/>
    </logger>

    <logger name="tr" level="INFO" additivity="false">
        <appender-ref ref="FILE"/>
    </logger>

    <logger name="fi.kela.se" level="INFO" additivity="false">
        <appender-ref ref="FILE"/>
    </logger>

    <logger name="se.sb.epsos.web" level="INFO" additivity="false">
        <appender-ref ref="FILE"/>
    </logger>

    <logger name="com.gnomon.xslt" level="INFO" additivity="false">
        <appender-ref ref="FILE"/>
    </logger>

    <logger name="epsos.ccd.gnomon.configmanager" level="INFO" additivity="false">
        <appender-ref ref="FILE"/>
    </logger>

    <logger name="eu.europa.ec.sante.ehdsi.gazelle.validation" level="INFO" additivity="false">
        <appender-ref ref="FILE"/>
    </logger>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>
