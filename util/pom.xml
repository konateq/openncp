    <artifactId>openncp-util</artifactId>
    <packaging>jar</packaging>

    <name>OpenNCP Util</name>

    <properties>
        <webservices-api.version>1.6</webservices-api.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>eu.europa.ec.sante.ehdsi</groupId>
