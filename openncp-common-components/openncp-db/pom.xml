                            <goal>updateSQL</goal>
                        </goals>
                        <configuration>
                            <changeLogFile>src/main/resources/openncp-ltrdb/db.changelog.xml</changeLogFile>
                            <url>offline:mysql?changeLogFile=${project.build.directory}/liquibase/databasechangelog.csv</url>
                            <migrationSqlOutputFile>${project.build.directory}/liquibase/openncp-ltrdb/schema-mysql.sql</migrationSqlOutputFile>
                        </configuration>
